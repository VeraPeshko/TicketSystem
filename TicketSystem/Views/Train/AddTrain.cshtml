@model Train

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Add Train</title>
</head>
<body>
    <h1>Add Train</h1>
    <form asp-action="AddTrain" method="post">
        <div>
            <label>Train Number:</label>
            <input type="text" name="TrainNumber" value="@Model?.TrainNumber" />
        </div>
        <div>
            <label>Route:</label>
            <input type="text" name="Route" value="@Model? .Route" />
        </div>
        <button type="submit">Add Train</button>
    </form>
</body>
</html>